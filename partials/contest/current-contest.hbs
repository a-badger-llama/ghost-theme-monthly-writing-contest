<section class="contest-current gh-outer">
    <div class="contest-current-inner gh-inner">
        {{!-- This Month's Prompt (dynamic) --}}
        <h2 class="contest-section-title is-title">Next Contest Details</h2>

        {{!--
            Create a post tagged "prompt" for each month's contest.
            The post excerpt becomes the prompt/theme text.

            To set contest details, add tags with these exact names
            and put the display value in each tag's Description field:
              - deadline  (e.g. "February 28, 2026")
              - words     (e.g. "2,500 words")
              - prize1    (e.g. "$100 + publication")
              - prize2    (e.g. "$50")
              - prize3    (e.g. "$25")
        --}}

        {{#get "posts" filter="tag:prompt" limit="1" order="published_at desc" include="tags"}}
            {{#if posts}}
                {{#foreach posts}}
                    <div class="contest-current-card">
                        <div class="contest-current-prompt">
                            <span class="contest-current-label">Theme</span>
                            {{#if excerpt}}
                                <p class="contest-current-prompt-text">{{excerpt}}</p>
                            {{/if}}
                        </div>
                        <dl class="contest-current-details">
                            {{#foreach tags}}
                                {{#match slug "deadline"}}
                                    <div class="contest-detail contest-detail-info">
                                        <dt>Deadline</dt>
                                        <dd>{{description}}</dd>
                                    </div>
                                {{/match}}
                                {{#match slug "words"}}
                                    <div class="contest-detail contest-detail-info">
                                        <dt>Word Count</dt>
                                        <dd>{{description}}</dd>
                                    </div>
                                {{/match}}
                                {{#match slug "prize1"}}
                                    <div class="contest-detail contest-detail-prize">
                                        <dt>1st Place</dt>
                                        <dd>{{description}}</dd>
                                    </div>
                                {{/match}}
                                {{#match slug "prize2"}}
                                    <div class="contest-detail contest-detail-prize">
                                        <dt>2nd Place</dt>
                                        <dd>{{description}}</dd>
                                    </div>
                                {{/match}}
                                {{#match slug "prize3"}}
                                    <div class="contest-detail contest-detail-prize">
                                        <dt>3rd Place</dt>
                                        <dd>{{description}}</dd>
                                    </div>
                                {{/match}}
                            {{/foreach}}
                        </dl>
                        <a href="/submit/" class="gh-button contest-current-cta">Submit Your Story</a>
                    </div>
                {{/foreach}}
            {{else}}
                <p>Prompt coming soon.</p>
            {{/if}}
        {{/get}}

    </div>
</section>
